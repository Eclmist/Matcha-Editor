<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>Matcha_Editor</RootNamespace>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>matcha.ico</ApplicationIcon>
    <Win32Resource />
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="MVVM\ViewModel\NewFolder\**" />
    <EmbeddedResource Remove="MVVM\ViewModel\NewFolder\**" />
    <None Remove="MVVM\ViewModel\NewFolder\**" />
    <Page Remove="MVVM\ViewModel\NewFolder\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Icons\Labels\cube.png" />
    <None Remove="Icons\matcha.ico" />
    <None Remove="Icons\matcha.png" />
    <None Remove="Resources\Splash.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="MVVM\Model\Viewport\" />
    <Folder Include="Themes\Inspector\" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\Labels\cube.png" />
    <Resource Include="Icons\matcha.ico">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Splash.png" />
  </ItemGroup>

</Project>
