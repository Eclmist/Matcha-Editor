<Window x:Class="Matcha_Editor.MVVM.View.EditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matcha_Editor" 
        xmlns:viewmodel="clr-namespace:Matcha_Editor.MVVM.ViewModel"
        xmlns:custom="clr-namespace:Matcha_Editor.MVVM.View"
        mc:Ignorable="d"
        Title="Matcha Editor" Height="1080" Width="1920"
        MinWidth="1280" MinHeight="768"
        Background="#1E1E1E"
        Icon="/Icons/matcha.ico"
        WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Height="20" Background="White">
            <MenuItem Header="File" Height="20" HorizontalAlignment="Left">
                <MenuItem Header="New" HorizontalAlignment="Left"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" HorizontalAlignment="Left">
                <MenuItem Header="Undo" HorizontalAlignment="Left"></MenuItem>
                <MenuItem Header="Redo" HorizontalAlignment="Left"></MenuItem>
            </MenuItem>
            <MenuItem Header="View" HorizontalAlignment="Left"/>
            <MenuItem Header="Tools" HorizontalAlignment="Left"/>
            <MenuItem Header="Window" HorizontalAlignment="Left"/>
            <MenuItem Header="Help" HorizontalAlignment="Left"/>
        </Menu>

        <!-- Main Window -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1480" MinWidth="800" MaxWidth="1600"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Left Excluding Properties -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="680" MinHeight="200" MaxHeight="800"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Top-Left Excluding Console -->
                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400" MinWidth="200" MaxWidth="400"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*" MinWidth="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hierarchy View -->
                    <Grid Grid.Column="0">
                        <custom:HierarchyView/>
                    </Grid>

                    <GridSplitter Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Width="2"/>

                    <!-- World Viewer View -->
                    <Grid Grid.Column="2">
                        <custom:ViewportView x:Name="Viewport"/>
                    </Grid>
                </Grid>

                <GridSplitter Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Height="2"/>

                <!-- Console View -->
                <Grid Grid.Row="2">
                    <custom:ConsoleView/>
                </Grid>
            </Grid>

            <GridSplitter Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Width="2"/>

            <!-- Inspector View -->
            <Grid Grid.Column="2">
                <custom:InspectorView Loaded="InspectorView_Loaded"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
