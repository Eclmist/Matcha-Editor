<UserControl x:Class="Matcha_Editor.MVVM.View.DockingPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custom="clr-namespace:Matcha_Editor.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Border>
        <StackPanel Orientation="Vertical">
            <StackPanel Background="Transparent" Orientation="Horizontal">
                <custom:DockingTabView x:Name="Tab1" Width="Auto" HorizontalAlignment="Left"/>
            </StackPanel>

            <Border BorderBrush="{StaticResource Editor.Window.GrayBrush4}" BorderThickness="1" Width="200" Height="200" HorizontalAlignment="Left" >
                <StackPanel Background="{StaticResource Editor.Window.GrayBrush2}" VerticalAlignment="Stretch">
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
